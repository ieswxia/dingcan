<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="FoodMapper">
	<resultMap id="food" type="food">
		<id column="food_id" property="foodId" />
		<result column="food_name" property="foodName" />
		<result column="food_price" property="foodPrice" />
		<result column="vendor_id" property="vendorId" />
		<result column="food_status" property="foodStatus" />
	</resultMap>

	<insert id="saveFood" parameterType="food" useGeneratedKeys="true"
		keyProperty="foodId">
		INSERT INTO food (food_name, food_price, vendor_id,
		food_status)
		VALUES(#{foodName}, #{foodPrice}, #{vendorId},
		#{foodStatus})
	</insert>

	<update id="editFood" parameterType="food">
		UPDATE food
		SET
		food_name =
		#{foodName},
		food_price = #{foodPrice},
		vendor_id = #{vendorId}
		food_status = #{foodStatus}
		WHERE food_id = #{foodId}
	</update>

	<delete id="deleteFood" parameterType="food">
		DELETE FROM food WHERE
		food_id = #{foodId}
	</delete>

	<select id="getFoodsByVendor" parameterType="int" resultMap="food">
		SELECT * FROM food WHERE vendor_id = #{vendorId};
	</select>

</mapper>